# TRNDA EC2 Standalone - Terraform Configuration Example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "eu-central-1"
aws_profile = "your-profile"  # Your AWS CLI profile

# Project Configuration
project_name = "trnda"
environment  = "prod"

# S3 Bucket (existing)
# This bucket will be used by TRNDA via S3_BUCKET environment variable
s3_bucket_name = "your-trnda-s3-bucket"

# Network Configuration
# You need an existing VPC and subnet
vpc_id    = "vpc-xxxxxxxxxxxxx"
subnet_id = "subnet-xxxxxxxxxxxxx"  # Public subnet recommended

# EC2 Configuration
instance_type  = "t4g.medium"  # ARM-based, 2 vCPU, 4 GB RAM
ssh_key_name   = "ai-tool-box"  # Existing SSH key pair

# Email Configuration
ses_sender_email = "trnda@ai.aws.thetrasklab.com"

# Logging
log_retention_days = 7
